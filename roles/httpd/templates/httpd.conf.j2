types {
  include "/usr/share/misc/mime.types"
}

server "default" {
  listen on * port 80
  log style combined

  root "/nonexistent"

  location "/.well-known/acme-challenge/*" {
    root "/acme"
    request strip 2
  }

  location * {
    block return 301 "https://www.{{ domain }}"
  }
}

include "/etc/httpd.d/sites.conf"
